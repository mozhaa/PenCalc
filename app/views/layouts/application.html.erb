<!DOCTYPE html>
<html>
  <head>
    <title>PenCalc Tool</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= tag :meta, name: :psj, action: action_name, controller: controller_name %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "jquery-3.7.1.min" %>
    <%= javascript_include_tag "fabric" %>
    <%= javascript_include_tag "init" %>
    <%= javascript_include_tag "measure_units" %>
    <%= javascript_include_tag "editor_logic" %>
    <%= javascript_include_tag "selectable_list" %>
    <%= javascript_importmap_tags %>
    <!-- yield :head -->
    <%= yield :head %>
  </head>

  <body>
    <%= content_for?(:content) ? yield(:content) : yield %>
  </body>
</html>
