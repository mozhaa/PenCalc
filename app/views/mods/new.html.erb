<div class="editor-layout">

  <div class="panel parts-list-panel">
    <ul class="parts-list">
      <li class="part hover-darker-1">
        
      </li>
    </ul>
  </div>

  <div class="panel canvas-panel">

    <input class="mod-name-input" type="text" name="mod-name" placeholder="Type mod name here...">
  </div>

  <div class="panel part-creator-panel">
    <form class="part-form" action="javascript:void(0);">
      <h3>Add new part</h3>

      <label class="option" for="name">Name</label>
      <input class="option" placeholder="Dr. Grip Grip" type="text" name="name">

      <label class="option" for="mass">Mass</label>
      <input class="option show-measure-units" placeholder="4.3 g" data-units="g" type="text" name="mass">

      <label class="option" for="len">Length</label>
      <input class="option show-measure-units" placeholder="5.15 cm" data-units="cm" type="text" name="len">

      <label class="option" for="color">Color</label>
      <input class="option" type="color" name="color">

      <input class="add-button" type="submit" value="Add">

      <span>or search in database</span>
      <input class="search-bar" type="text" name="search-query">
    </form>
  </div>

  <div class="panel calc-info-panel"></div>

  <div class="panel menu-panel">
    <h2>Menu</h2>
    <button>New</button>
    <button>Open</button>
    <button>Save</button>
  </div>
</div>

<%= content_tag :div, id: "data-element", style: "display: none", data: {structure: @structure} do %>
<% end %>